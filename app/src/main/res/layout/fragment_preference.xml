<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorText"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/sf_pro_display_light"
        android:gravity="center"
        android:padding="@dimen/ten_size"
        android:text="@string/preference"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/edt_size"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/forty_size"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/five_pad">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_notification" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/forty_size"
                android:padding="@dimen/five_pad"
                android:text="@string/notifications"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/edt_size" />

            <ToggleButton
                android:id="@+id/tgb_notification"
                android:layout_width="46dp"
                android:layout_height="26dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:button="@drawable/selector_toggle"
                android:checked="true"
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="32dp"
            android:background="@color/colorText" />

        <RelativeLayout
            android:id="@+id/rl_configuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/five_pad">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_payment_config" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/forty_size"
                android:padding="@dimen/five_pad"
                android:text="@string/payment_config"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/edt_size" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/forty_size"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/five_pad">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_recommand" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/forty_size"
                android:padding="@dimen/five_pad"
                android:text="@string/recommand"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/edt_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_tg_on"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="32dp"
            android:background="@color/colorText" />

        <RelativeLayout
            android:id="@+id/rl_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/five_pad">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_help" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/forty_size"
                android:padding="@dimen/five_pad"
                android:text="@string/about"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/edt_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/five_pad"
                android:src="@mipmap/ic_right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="32dp"
            android:background="@color/colorText" />

        <RelativeLayout
            android:id="@+id/rl_community"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/five_pad">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_community" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/forty_size"
                android:padding="@dimen/five_pad"
                android:text="@string/comment_supp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/edt_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_tg_on"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="32dp"
            android:background="@color/colorText" />

        <RelativeLayout
            android:id="@+id/rl_faq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/five_pad">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_faq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/forty_size"
                android:padding="@dimen/five_pad"
                android:text="@string/faq"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/edt_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/five_pad"
                android:src="@mipmap/ic_right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="32dp"
            android:background="@color/colorText" />

        <RelativeLayout
            android:id="@+id/rl_sign_off"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/five_pad">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_pref_logout" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/forty_size"
                android:padding="@dimen/five_pad"
                android:text="@string/sign_off"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/edt_size" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>