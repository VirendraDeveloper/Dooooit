<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/prif_dip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_size"
            android:src="@mipmap/ic_sign_up_dooit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/prif_dip"
            android:fontFamily="@font/sf_pro_display_light"
            android:gravity="center_horizontal"
            android:text="@string/enable_services"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/prif_dip" />

        <RelativeLayout
            android:id="@+id/rl_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/five_pad">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_white_notification" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/forty_size"
                android:padding="@dimen/five_pad"
                android:text="@string/notifications"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/edt_size" />

            <ImageView
                android:id="@+id/iv_notification_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_white_check" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="32dp"
            android:background="@color/colorWhite" />

        <RelativeLayout
            android:id="@+id/rl_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/five_pad">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/iv_white_location" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/forty_size"
                android:fontFamily="@font/sf_pro_display_light"
                android:padding="@dimen/five_pad"
                android:text="@string/location"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/edt_size" />

            <ImageView
                android:id="@+id/iv_location_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_like" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="32dp"
            android:background="@color/colorWhite" />

        <RelativeLayout
            android:id="@+id/rl_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/five_pad">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_white_photo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/forty_size"
                android:fontFamily="@font/sf_pro_display_light"
                android:padding="@dimen/five_pad"
                android:text="@string/photo"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/edt_size" />

            <ImageView
                android:id="@+id/iv_photo_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_like" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="32dp"
            android:background="@color/colorWhite" />

        <RelativeLayout
            android:id="@+id/rl_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/five_pad">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_white_camera" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/forty_size"
                android:fontFamily="@font/sf_pro_display_light"
                android:padding="@dimen/five_pad"
                android:text="@string/camera"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/edt_size" />

            <ImageView
                android:id="@+id/iv_camera_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_like" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="32dp"
            android:background="@color/colorWhite" />

        <RelativeLayout
            android:id="@+id/rl_microphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/five_pad">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_mice" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/forty_size"
                android:fontFamily="@font/sf_pro_display_light"
                android:padding="@dimen/five_pad"
                android:text="@string/microphone"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/edt_size" />

            <ImageView
                android:id="@+id/iv_mice_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_like" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_finalizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/prif_dip"
            android:layout_marginRight="@dimen/prif_dip"
            android:layout_marginTop="@dimen/forty_size"
            android:background="@drawable/join_bg"
            android:enabled="false"
            android:fontFamily="@font/sf_pro_display_light"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/finalizar"
            android:textColor="@color/colorLight"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_recover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/prif_dip"
            android:fontFamily="@font/sf_pro_display_light"
            android:gravity="center"
            android:text="@string/configure_app"
            android:textColor="@android:color/white"
            android:textSize="18dp" />
    </LinearLayout>
</ScrollView>
