<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_width="@dimen/buu_size"
        android:layout_height="@dimen/buu_size"
        android:layout_centerInParent="true"
        android:background="@mipmap/ic_benco">

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="85dp"
            android:text="$0"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/forty_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_balance"
            android:layout_centerHorizontal="true"
            android:text="@string/current_bal"
            android:textColor="@color/colorPrimaryDark" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_withdraw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/ten_size"
        android:layout_marginLeft="@dimen/edt_size"
        android:layout_marginRight="@dimen/edt_size"
        android:layout_marginTop="@dimen/edt_size"
        android:background="@drawable/survey_bg"
        android:fontFamily="@font/sf_pro_display_light"
        android:gravity="center"
        android:padding="@dimen/tab_text"
        android:text="@string/withdraw_fund"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/edt_size" />

</RelativeLayout>