<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/slide_tt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/fifty_pad"
        android:fontFamily="@font/sf_pro_display_light"
        android:gravity="center_horizontal"
        android:text="@string/slide3"
        android:textColor="@android:color/white"
        android:textSize="@dimen/prif_dip" />

    <ImageView
        android:id="@+id/doo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slide_tt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/ten_size"
        android:src="@mipmap/ic_slide_dooit" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-120dp"
        android:layout_marginTop="@dimen/fifty_pad"
        android:src="@mipmap/ic_all" />
</RelativeLayout>