<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@drawable/alert_back"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_light"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/left_dip"
        android:paddingRight="@dimen/left_dip"
        android:paddingTop="@dimen/left_dip"
        android:text="Title"
        android:textColor="@color/colorBlack"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/five_pad"
        android:fontFamily="@font/sf_pro_display_light"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/left_dip"
        android:paddingRight="@dimen/left_dip"
        android:text="Message"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/ten_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/ten_size"
        android:background="@color/colorGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/sf_pro_display_light"
            android:gravity="center_horizontal"
            android:padding="@dimen/five_pad"
            android:text="@string/cancel"
            android:textColor="@color/colorAccept" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorGray" />

        <TextView
            android:id="@+id/tv_accept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/sf_pro_display_light"
            android:gravity="center_horizontal"
            android:padding="@dimen/five_pad"
            android:text="@string/accept"
            android:textColor="@color/colorAccept"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>